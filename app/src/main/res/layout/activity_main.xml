<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="end"
        android:hint="0"
        android:onClick="Calculation"
        android:paddingTop="75dp"
        android:paddingEnd="14dp"
        android:text=""
        android:textColorHint="@color/black"
        android:textSize="48dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="chooseNum"
                android:text="7"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="chooseNum"
                android:text="8"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="chooseNum"
                android:text="9"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="Calculation"
                android:text="*"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="chooseNum"
                android:text="4"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="chooseNum"
                android:text="5"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="chooseNum"
                android:text="6"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="Calculation"
                android:text="/"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="chooseNum"
                android:text="1"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="chooseNum"
                android:text="2"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="chooseNum"
                android:text="3"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="Calculation"
                android:text="+"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/equalss"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="Equals"
                android:text="="
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="chooseNum"
                android:text="0"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="Delete"
                android:text="C"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />


            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="Calculation"
                android:text="-"
                android:textSize="36dp"
                app:cornerRadius="15dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>